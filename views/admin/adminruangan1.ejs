<!DOCTYPE html>
<html>
<head>
  <title>Admin - Lantai 1</title> <!-- Change for Lantai 2 or 3 -->
  <link href="https://fonts.googleapis.com/css2?family=Kanit&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/images/gamesuitelogo.png">
  <style>
    body {
      font-family: 'Kanit', sans-serif;
      padding: 20px;
      margin: 0;
      background-color: #778dfc;
      color: white;
      text-align: center;
    }

    .header-image {
      width: 500px;
      margin: 20px auto;
      display: block;
    }

    .container {
      max-height: 600px;
      overflow-y: auto;
      border: 1px solid #001fbb;
      padding: 15px;
      background: #4e5dad;
      border-radius: 10px;
      margin: 0 auto;
      width: 90%;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      color: white;
    }

    th, td {
      border: 1px solid #abb9ff;
      padding: 10px;
    }

    th {
      background-color: #2e3b99;
    }

    td form {
      margin: 0;
    }

    button {
      padding: 6px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      background: #f44336;
      color: white;
    }

    .back-button-container {
      margin-top: 20px;
    }

    .back-button {
      width: 120px;
      height: auto;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .back-button:hover {
      transform: scale(1.1);
    }
  </style>
</head>
<body>

  <img src="/images/headeradminreservation.png" alt="Admin Header" class="header-image">

  <h1>Reservasi - Lantai 1 (Room 101-110)</h1> <!-- Change for 2 or 3 accordingly -->

  <div class="container">
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Room</th>
          <th>Date</th>
          <th>Time</th>
          <th>Payment</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% reservations.forEach(r => { %>
          <tr>
            <td><%= r.username %></td>
            <td><%= r.room %></td>
            <td><%= new Date(r.date).toLocaleDateString() %></td>
            <td><%= r.startTime %> - <%= r.endTime %></td>
            <td><%= r.paymentMethod %></td>
            <td>
              <form action="/admin/reservation/delete/<%= r._id %>" method="POST" onsubmit="return confirm('Delete this reservation?')">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="back-button-container">
    <a href="/admin/adminruangan">
      <img src="/images/backbutton.png" alt="Back" class="back-button">
    </a>
  </div>

</body>
</html>
