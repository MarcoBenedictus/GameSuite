<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Select Reservation Date and Time</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Kanit&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/images/gamesuitelogo.png">
  <style>
    body {
      margin: 0;
      padding: 0;
      height: 0;
      overflow: hidden;
      background-color: #778dfc;
      font-family: 'Kanit', sans-serif;
      color: white;
      position: relative;
    }

    .logo-container {
      position: absolute;
      top: 0px;
      left: 0px;
    }

    .logo {
      width: 250px;
      height: auto;
    }

    .header-image {
      width: 600px;
      margin: 30px auto 10px auto;
      display: block;
      position: absolute;
      top: 10px;
      left: 32.5%;
    }

    h1 {
      position: absolute;
      top: 30px;
      left: 50%;
      transform: translateX(-50%);
      margin: 0;
    }

    .form-group {
      position: absolute;
    }

    .date-group {
      top: 400px;
      left: 950px;
    }

    .date-group img,
    .time-group img {
      position: absolute;
      width: 420px;
      height: auto;
      z-index: -1;
    }

    .date-group input[type="date"] {
      position: absolute;
      top: 240px;
      left: 95px;
      border-radius: 20px;
      padding: 12px 20px;
      font-size: 3rem;
      border: none;
      outline: none;
      width: 191px;
      text-align: center;
      background: white;
      color: black;
    }

    .time-group {
      top: 400px;
      left: 400px;
    }

    .time-picker {
      display: flex;
      flex-direction: column;
      gap: 120px;
      margin-top: 125px;
    }

    .time-picker select {
      border-radius: 20px;
      padding: 12px 20px;
      font-size: 3rem;
      border: none;
      outline: none;
      width: 415px;
      text-align: center;
      background: transparent;
      color: black;
      
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background-image: none;
    }

    .submit-btn {
      position: absolute;
      top: 580px;
      left: 1570px;
      background: none;
      border: none;
      cursor: pointer;
    }

    .submit-btn img {
      width: 250px;
      transition: transform 0.3s;
    }

    .submit-btn img:hover {
      transform: scale(1.05);
    }

    .error-message {
      position: absolute;
      top: 270px;
      left: 728px;
      font-size: 1.5rem;
      color: red;
    }
  </style>
</head>

<body>

  <h1></h1>

  <div class="top-bar">
    <div class="logo-container">
      <img src="/images/gamesuitelogoleft.png" alt="Game Suite Logo" class="logo" />
    </div>

    <form action="/ruangan/ruanganlanding2" method="POST">

      <img src="/images/roomreservationheader.png" alt="Room Reservation Header" class="header-image">

      <!-- Date Picker -->
      <div class="form-group date-group">
        <img src="/images/reservationdatebutton.png" alt="Date Background">
        <input type="date" id="date" name="date" required>
      </div>

      <!-- Time Picker -->
      <div class="form-group time-group">
        <img src="/images/reservationtimebutton.png" alt="Time Background">
        <div class="time-picker">
          <select id="startTime" name="startTime" required>
            <option value="">Start Time</option>
            <option value="08:00">08:00</option>
            <option value="09:00">09:00</option>
            <option value="10:00">10:00</option>
            <option value="11:00">11:00</option>
            <option value="12:00">12:00</option>
            <option value="13:00">13:00</option>
            <option value="14:00">14:00</option>
            <option value="15:00">15:00</option>
            <option value="16:00">16:00</option>
            <option value="17:00">17:00</option>
            <option value="18:00">18:00</option>
            <option value="19:00">19:00</option>
            <option value="20:00">20:00</option>
            <option value="21:00">21:00</option>
          </select>
          <select id="endTime" name="endTime" required>
            <option value="">End Time</option>
            <option value="09:00">09:00</option>
            <option value="10:00">10:00</option>
            <option value="11:00">11:00</option>
            <option value="12:00">12:00</option>
            <option value="13:00">13:00</option>
            <option value="14:00">14:00</option>
            <option value="15:00">15:00</option>
            <option value="16:00">16:00</option>
            <option value="17:00">17:00</option>
            <option value="18:00">18:00</option>
            <option value="19:00">19:00</option>
            <option value="20:00">20:00</option>
            <option value="21:00">21:00</option>
            <option value="22:00">22:00</option>
          </select>
        </div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="submit-btn">
        <img src="/images/lanjutkepembayaranbutton.png" alt="Lanjut ke Pembayaran">
      </button>

      <!-- Error Message -->
      <% if (error) { %>
        <div class="error-message">
          <%= error %>
        </div>
        <% } %>

    </form>
</body>

</html>